<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient"
        tools:context=".ui.auth.NameSignupFragment">

    <!-- Title Section -->
    <TextView
            android:id="@+id/tvSignupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/sign_up"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guidelineTop" />

    <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="@string/welcome_back_ncreate_your_account"
            android:textColor="#C6CAD1"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSignupTitle" />

    <!-- First Name label -->
    <TextView
            android:id="@+id/tvFirstNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_semibold"
            android:paddingBottom="5dp"
            android:text="First Name"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/etFirstName"
            app:layout_constraintStart_toStartOf="@+id/etFirstName" />

    <!--  First Name Text Field with Outline -->
    <EditText
            android:id="@+id/etFirstName"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="95dp"
            android:background="@drawable/edit_text_outline_selector"
            android:fontFamily="@font/roboto_regular"
            android:hint="@string/enter_first_name"
            android:inputType="textPersonName"
            android:paddingHorizontal="16dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#7F8A94"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle" />

    <!-- Last Name label -->
    <TextView
            android:id="@+id/tvLastNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_semibold"
            android:paddingBottom="5dp"
            android:text="@string/last_name"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/etLastName"
            app:layout_constraintStart_toStartOf="@+id/etLastName" />

    <!--  Last Name Text Field with Outline -->
    <EditText
            android:id="@+id/etLastName"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="46dp"
            android:background="@drawable/edit_text_outline_selector"
            android:fontFamily="@font/roboto_regular"
            android:hint="@string/enter_last_name"
            android:inputType="textPersonName"
            android:paddingHorizontal="16dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#7F8A94"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etFirstName" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnProceed"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:background="@drawable/rounded_button_bg"
            android:text="@string/proceed"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="46dp"
            app:layout_constraintEnd_toEndOf="@id/etLastName"
            app:layout_constraintStart_toStartOf="@id/etLastName"
            app:layout_constraintTop_toBottomOf="@+id/etLastName" />

    <!-- Log In Link -->
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnProceed">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already_have_an_account"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

        <TextView
                android:id="@+id/tvLoginLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:clickable="true"
                android:focusable="true"
                android:paddingVertical="15dp"
                android:text="@string/log_in"
                android:textColor="#2563EB"
                android:textSize="13sp" />
    </LinearLayout>

    <!-- Guideline -->
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

</androidx.constraintlayout.widget.ConstraintLayout>
