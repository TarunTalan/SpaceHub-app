<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:focusableInTouchMode="true"
    tools:context=".ui.auth.password.ResetPasswordFragment">
        <!-- Title Group -->


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/titleGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_title_top"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_end">

        <TextView
                android:id="@+id/tvLoginTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/reset_password"
                android:textColor="@android:color/white"
                android:textSize="@dimen/title_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_subtitle_top"
                android:fontFamily="@font/roboto_regular"
                android:text="Please enter your email to receive an OTP."
                android:textColor="#C6CAD1"
                android:textSize="@dimen/subtitle_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvLoginTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- Email Group -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/emailGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/titleGroup"
            app:layout_constraintEnd_toStartOf="@+id/guideline_end">

        <TextView
                android:id="@+id/tvEmailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_semibold"
                android:paddingBottom="@dimen/label_padding_bottom"
                android:text="@string/enter_email"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/label_text_size"
                app:layout_constraintStart_toStartOf="@+id/emailLayout"
                app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="@dimen/input_height"
                android:maxWidth="@dimen/input_max_width"
                app:boxBackgroundMode="outline"
                app:boxCollapsedPaddingTop="0dp"
                app:boxCornerRadiusBottomEnd="@dimen/input_corner_radius"
                app:boxCornerRadiusBottomStart="@dimen/input_corner_radius"
                app:boxCornerRadiusTopEnd="@dimen/input_corner_radius"
                app:boxCornerRadiusTopStart="@dimen/input_corner_radius"
                app:boxStrokeColor="@color/outlined_box_stroke_color"
                app:boxStrokeWidth="@dimen/box_stroke_width"
                app:boxStrokeWidthFocused="@dimen/box_stroke_width"
                app:endIconTint="#ADADAD"
                app:errorEnabled="false"
                app:helperText="@null"
                app:helperTextEnabled="false"
                app:hintEnabled="false"
                app:hintTextColor="@color/hint_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvEmailLabel"
                app:startIconDrawable="@drawable/email"
                app:startIconTint="#ADADAD">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmail"
                    style="@style/AppInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/enter_your_email"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/input_text_size"
                    android:paddingEnd="@dimen/input_padding_end" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
                android:id="@+id/ivEmailError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/email_error_icon_margin_end"
                android:src="@drawable/error_in_email"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/emailLayout"
                app:layout_constraintEnd_toEndOf="@id/emailLayout"
                app:layout_constraintTop_toTopOf="@id/emailLayout"
                tools:ignore="ContentDescription" />

        <TextView
                android:id="@+id/tvEmailError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/error_margin_top"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#F44336"
                android:textSize="@dimen/error_text_size"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="@+id/emailLayout"
                app:layout_constraintTop_toBottomOf="@+id/emailLayout"
                tools:text="Invalid email format" />

    </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- Actions Group -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/actionsGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/guideline2"
            app:layout_constraintEnd_toStartOf="@+id/guideline_end">

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogin"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/rounded_button_bg"
                android:fontFamily="@font/roboto_regular"
                android:maxWidth="400dp"
                android:text="@string/send_6_digit_otp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/tvBackToLoginLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_regular"
                android:paddingVertical="@dimen/login_padding_vertical"
                android:text="@string/back_to_log_in"
                android:textColor="#2563EB"
                android:textSize="@dimen/login_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnLogin" />
    </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Progress bar for request feedback -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/actionsGroup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"
            />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline_start"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.08"
            />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline_end"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.92"
            />

        <!-- Decorative Ellipses -->
        <ImageView
            android:id="@+id/ellipse1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ellipse_1"
            app:layout_constraintBottom_toBottomOf="@id/ellipse2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription"
            />

        <ImageView
            android:id="@+id/ellipse2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ellipse_1"
            app:layout_constraintBottom_toBottomOf="@+id/ellipse3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription"
            />

        <ImageView
            android:id="@+id/ellipse3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingBottom="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ellipse_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription"
            />

</androidx.constraintlayout.widget.ConstraintLayout>
