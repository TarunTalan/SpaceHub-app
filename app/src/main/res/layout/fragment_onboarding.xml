<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient"
        tools:context=".ui.auth.Onboarding.OnboardingFragment">

    <!-- Orbital Rings (Largest to Smallest)         -->
    <!-- Fixed at 45% vertical position               -->
    <ImageView
            android:id="@+id/orbit_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ellipse_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45" />

    <ImageView
            android:id="@+id/orbit_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ellipse_7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45" />

    <ImageView
            android:id="@+id/orbit_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ellipse_6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45" />

    <ImageView
            android:id="@+id/orbit_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ellipse_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45" />

    <ImageView
            android:id="@+id/orbit_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ellipse_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45" />

    <!-- Logo - Initially centered at 45%            -->
    <ImageView
            android:id="@+id/img_logo"
            android:layout_width="@dimen/onboarding_logo_size"
            android:layout_height="@dimen/onboarding_logo_size"
            android:contentDescription="@string/spacehub_name"
            android:src="@drawable/app_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45" />

    <!-- Content - Title, Subtitle, and Buttons      -->
    <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/onboarding_title_margin_top"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/onboarding_title"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/onboarding_title_text_size"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/img_logo"
            tools:visibility="visible" />

    <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/onboarding_subtitle_margin_top"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/onboarding_subtitle"
            android:textColor="#C6CAD1"
            android:textSize="@dimen/onboarding_subtitle_text_size"
            android:visibility="invisible"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="@dimen/onboarding_button_height"
            android:layout_marginTop="@dimen/onboarding_button_margin_top"
            android:background="@drawable/rounded_button_bg"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/log_in"
            android:textSize="@dimen/onboarding_button_text_size"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
            tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_sign_up"
            android:layout_width="0dp"
            android:layout_height="@dimen/onboarding_button_height"
            android:layout_marginTop="@dimen/onboarding_button_margin_top2"
            android:background="@drawable/rounded_button_bg"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/sign_up"
            android:textSize="@dimen/onboarding_button_text_size"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/btn_login"
            tools:visibility="visible" />

    <!-- Guidelines for Horizontal Margins           -->
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>
