<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav_graph"
    app:startDestination="@id/onboardingFragment">

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.example.myapplication.ui.auth.onboarding.OnboardingFragment"
        android:label="OnboardingFragment"
        tools:layout="@layout/fragment_onboarding">
        <action
            android:id="@+id/action_onboardingFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:launchSingleTop="true" />
        <action
            android:id="@+id/action_onboardingFragment_to_signupFragment"
            app:destination="@id/nameSignupFragment"
            app:launchSingleTop="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.myapplication.ui.auth.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/nameSignupFragment"
            app:launchSingleTop="true" />
        <action
            android:id="@+id/action_loginFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment" />
        <action
            android:id="@+id/action_loginFragment_to_logoutFragment"
            app:destination="@id/logoutFragment"
            app:launchSingleTop="true" />
    </fragment>

    <fragment
        android:id="@+id/nameSignupFragment"
        android:name="com.example.myapplication.ui.auth.signup.NameSignupFragment"
        android:label="NameSignupFragment"
        tools:layout="@layout/fragment_name_signup">
        <action
            android:id="@+id/action_nameSignupFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_nameSignupFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.myapplication.ui.auth.signup.SignupFragment"
        android:label="SignupFragment"
        tools:layout="@layout/fragment_signup">
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:launchSingleTop="true" />
        <action
            android:id="@+id/action_signupFragment_to_signupVerificationFragment"
            app:destination="@id/signupVerificationFragment" />
    </fragment>

    <fragment
        android:id="@+id/signupVerificationFragment"
        android:name="com.example.myapplication.ui.auth.signup.SignupVerificationFragment"
        android:label="SignupVerificationFragment"
        tools:layout="@layout/fragment_verify_signup">
        <action
            android:id="@+id/action_signupVerificationFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_signupVerificationFragment_to_logoutFragment"
            app:destination="@id/logoutFragment"
            app:launchSingleTop="true" />
        <action
            android:id="@+id/action_signupVerificationFragment_to_onboardingFragment"
            app:destination="@id/onboardingFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/auth_nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.example.myapplication.ui.auth.password.ResetPasswordFragment"
        android:label="ResetPasswordFragment"
        tools:layout="@layout/fragment_reset_password">
        <action
            android:id="@+id/action_resetPasswordFragment_to_forgotPasswordVerificationFragment"
            app:destination="@id/forgotPasswordVerificationFragment" />
        <action
            android:id="@+id/action_resetPasswordFragment_to_verifyForgotPasswordFragment"
            app:destination="@id/verifyForgotPasswordFragment" />
        <action
            android:id="@+id/action_resetPasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/verifyForgotPasswordFragment"
        android:name="com.example.myapplication.ui.auth.password.ForgotPasswordVerificationFragment"
        android:label="Verify Forgot Password"
        tools:layout="@layout/fragment_verify_forgot_password">
        <action
            android:id="@+id/action_verifyForgotPasswordFragment_to_newPasswordFragment"
            app:destination="@id/newPasswordFragment" />
    </fragment>

    <fragment
        android:id="@+id/forgotPasswordVerificationFragment"
        android:name="com.example.myapplication.ui.auth.password.ForgotPasswordVerificationFragment"
        android:label="forgotPasswordVerificationFragment"
        tools:layout="@layout/fragment_verify_forgot_password">
        <action
            android:id="@+id/action_forgotPasswordVerificationFragment_to_newPasswordFragment"
            app:destination="@id/newPasswordFragment" />
        <action
            android:id="@+id/action_forgotPasswordVerificationFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/newPasswordFragment"
        android:name="com.example.myapplication.ui.auth.password.NewPasswordFragment"
        android:label="NewPasswordFragment"
        tools:layout="@layout/fragment_new_password">
        <action
            android:id="@+id/action_newPasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_newPasswordFragment_to_logoutFragment"
            app:destination="@id/logoutFragment" />
    </fragment>

    <fragment
        android:id="@+id/logoutFragment"
        android:name="com.example.myapplication.ui.auth.logout.LogoutFragment"
        android:label="LogoutFragment"
        tools:layout="@layout/fragment_logout">
        <action
            android:id="@+id/action_logoutFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_logoutFragment_to_onboardingFragment"
            app:destination="@id/onboardingFragment"
            app:launchSingleTop="true" />
    </fragment>

</navigation>